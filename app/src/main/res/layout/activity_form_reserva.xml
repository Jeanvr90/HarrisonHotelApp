<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/container_resumen"
        android:orientation="vertical"
        tools:context=".ui.FormReserva.FormReservaActivity">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/linear_contenido"
            android:orientation="vertical" >

        <com.google.android.material.appbar.CollapsingToolbarLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/principal" >

            <ImageView
                    android:layout_width="30dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="25dp"
                    android:layout_marginStart="25dp"
                    android:src="@drawable/ic_keyboard_backspace_white_24dp"
                    android:contentDescription="@string/icon_arrow"/>

            <ImageView
                    android:layout_width="30dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="120dp"
                    android:layout_marginStart="120dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_baseline_notifications2_24"
                    android:contentDescription="@string/icon_notification"/>

            <ImageView
                    android:layout_width="30dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="170dp"
                    android:layout_marginStart="170dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_baseline_login_24"
                    android:contentDescription="@string/icon_logout"/>

        </com.google.android.material.appbar.CollapsingToolbarLayout>

        <androidx.coordinatorlayout.widget.CoordinatorLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical" >

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:id="@+id/linearLayout">

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        tools:ignore="UselessParent">

                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="5dp"
                            android:orientation="vertical">

                        <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="15dp"
                                android:layout_marginStart="35dp"
                                android:layout_marginEnd="35dp"
                                android:textSize="25sp"
                                android:textStyle="bold"
                                android:textColor="@color/black"
                                android:text="Resumen de su reserva"/>

                        <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="15dp"
                                android:layout_marginStart="35dp"
                                android:layout_marginEnd="35dp"
                                android:orientation="horizontal">

                            <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical">

                                <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:orientation="horizontal">

                                    <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:textSize="20sp"
                                            android:textStyle="bold"
                                            android:textColor="@color/black"
                                            android:text="S/" />

                                    <TextView
                                            android:id="@+id/form_tv_precio"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginLeft="5dp"
                                            android:layout_marginStart="5dp"
                                            android:textColor="@color/black"
                                            android:textSize="20sp"
                                            android:textStyle="bold"
                                            android:text="@string/txt_price_typo_room_detal" />

                                    <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:textSize="20sp"
                                            android:textColor="@color/black"
                                            android:textStyle="bold"
                                            android:text=".00" />

                                    <LinearLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_marginLeft="190dp"
                                            android:layout_marginStart="190dp"
                                            tools:ignore="UseCompoundDrawables">

                                        <ImageView
                                                android:layout_width="30dp"
                                                android:layout_height="30dp"
                                                android:layout_gravity="center"
                                                android:tint="#EA0C0C"
                                                android:src="@drawable/ic_baseline_airline_seat_individual_suite_24" />

                                        <TextView
                                                android:id="@+id/form_tv_cama_cantidad"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:layout_marginLeft="10dp"
                                                android:layout_marginStart="10dp"
                                                android:textColor="@color/black"
                                                android:textSize="20sp"
                                                android:text="@string/txt_nro_bet_detail" />

                                    </LinearLayout>

                                </LinearLayout>

                            </LinearLayout>

                        </LinearLayout>

                        <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:layout_marginStart="35dp"
                                android:layout_marginEnd="35dp">

                            <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginRight="5dp"
                                    android:layout_marginEnd="5dp"
                                    android:textColor="@color/black"
                                    android:fontFamily="sans-serif"
                                    android:textSize="18sp"
                                    android:text="HabitaciÃ³n"/>

                            <TextView
                                    android:id="@+id/form_tipo_habitacion"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/black"
                                    android:fontFamily="sans-serif"
                                    android:textSize="18sp"
                                    android:text="room blabla bla"/>

                        </LinearLayout>

                        <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:layout_marginStart="35dp"
                                android:layout_marginEnd="35dp"
                                android:orientation="vertical">

                            <TextView
                                    android:id="@+id/form_habitacion_descripcion"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="15sp"
                                    android:text="habitacion comodo con una maximo de " />

                        </LinearLayout>

                        <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:layout_marginStart="35dp"
                                android:layout_marginEnd="35dp"
                                android:orientation="horizontal">

                            <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical">

                                <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textStyle="bold"
                                        android:textSize="16sp"
                                        android:textColor="@color/black"
                                        android:text="Fecha Inicio y Final " />

                                <LinearLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:orientation="horizontal">

                                    <TextView
                                            android:id="@+id/form_fecha_inicio"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:textSize="15sp"
                                            android:text="09/01/21 " />

                                    <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginStart="5dp"
                                            android:layout_marginEnd="5dp"
                                            android:text="-->" />

                                    <TextView
                                            android:id="@+id/form_fecha_final"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:textSize="15sp"
                                            android:text="13/01/21" />

                                </LinearLayout>

                            </LinearLayout>

                        </LinearLayout>

                        <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:layout_marginStart="35dp"
                                android:layout_marginEnd="35dp"
                                android:orientation="vertical">

                            <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="18sp"
                                    android:textStyle="bold"
                                    android:textColor="@color/black"
                                    android:text="DÃ­a(s)" />

                            <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">

                                <TextView
                                        android:id="@+id/form_tv_dia_cantidad"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginRight="5dp"
                                        android:layout_marginEnd="5dp"
                                        android:textSize="18sp"
                                        android:text="5" />

                                <TextView
                                        android:id="@+id/form_tv_dia_texto"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textSize="18sp"
                                        android:text="dÃ­as" />

                            </LinearLayout>

                        </LinearLayout>

                        <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:layout_marginStart="35dp"
                                android:layout_marginEnd="35dp"
                                android:orientation="horizontal">

                            <com.google.android.material.checkbox.MaterialCheckBox
                                    android:id="@+id/rbtEstaciomiento"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="16sp"
                                    android:text="Â¿Estacionamiento?" />

                        </LinearLayout>

                        <com.google.android.material.textfield.TextInputLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:layout_marginStart="35dp"
                                android:layout_marginEnd="35dp"
                                app:boxCornerRadiusTopStart="10dp"
                                app:boxCornerRadiusTopEnd="10dp"
                                android:background="#F3F3F3"
                                app:boxStrokeColor="#C82323">

                            <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/form_placa_vehiculo"
                                    android:layout_width="match_parent"
                                    android:layout_height="50dp"
                                    android:inputType="textEmailAddress"
                                    android:hint="Placa Vehiculo"/>

                        </com.google.android.material.textfield.TextInputLayout>

                        <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="20dp"
                                android:layout_marginStart="35dp"
                                android:layout_marginEnd="35dp"
                                android:orientation="horizontal">

                            <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="20sp"
                                    android:textColor="@color/black"
                                    android:textStyle="bold"
                                    android:text="Precio total:"/>

                            <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginRight="5dp"
                                    android:layout_marginEnd="5dp"
                                    android:gravity="end">

                                <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginRight="5dp"
                                        android:layout_marginEnd="5dp"
                                        android:textSize="20sp"
                                        android:textColor="@color/black"
                                        android:textStyle="bold"
                                        android:text="S/" />

                                <TextView
                                        android:id="@+id/form_precio_total"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textSize="20sp"
                                        android:textColor="@color/black"
                                        android:textStyle="bold"
                                        android:text="750" />

                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <com.google.android.material.button.MaterialButton
                    android:id="@+id/form_btnFinalizarReserva"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginLeft="35dp"
                    android:layout_marginRight="35dp"
                    android:layout_gravity="bottom"
                    android:textColor="@color/black"
                    android:layout_marginBottom="70dp"
                    android:backgroundTint="@color/color_button"
                    android:text="finalizar Reserva"
                    tools:targetApi="lollipop"/>

            <com.google.android.material.bottomnavigation.BottomNavigationView
                    android:id="@+id/nav_view"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_gravity="bottom"
                    android:background="@color/principal"
                    app:itemIconTint="@color/white"
                    app:itemTextColor="@color/white"
                    app:menu="@menu/bottom_nav_menu" />

        </androidx.coordinatorlayout.widget.CoordinatorLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>